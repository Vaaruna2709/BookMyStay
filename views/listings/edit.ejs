<% layout("/layouts/boilerplate") %>
<body class="bg-white">
  <div class="container py-5">
    <h3 class="text-center text-success mb-4 fw-semibold">Edit the Listing</h3>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 p-4 shadow-sm rounded bg-light">

        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
          <input type="hidden" name="_method" value="PUT">

          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              value="<%= listing.title %>"
              class="form-control"
              placeholder="Listing title"
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid title</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              class="form-control"
              rows="4"
              placeholder="Enter listing description"
              required
            ><%= listing.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a description</div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Price</label>
              <input
                type="text"
                name="listing[price]"
                value="<%= listing.price %>"
                class="form-control"
                placeholder="e.g. 4999"
                required
              >
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a price</div>
            </div>

            <div class="col-md-8 mb-3">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                value="<%= listing.country %>"
                class="form-control"
                placeholder="e.g. India"
                required
              >
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a country</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= listing.location %>"
              class="form-control"
              placeholder="City or area"
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a location</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Original Image</label><br>
            <img src="<%= listing.image.url %>" alt="Listing Image" class="img-thumbnail" style="max-height: 200px;">
          </div>

          <div class="mb-4">
            <label for="image" class="form-label">Upload New Image</label>
            <input
              type="file"
              name="listing[image]"
              class="form-control"
            >
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-success px-5 py-2">Save Changes</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</body>
