<% layout("/layouts/boilerplate")%>
<body>
      <div class="row">
        <div class="col-8  offset-3">
          <p style="font-size: large;" class="card-heading"><b><%=listing.title%></b></p>
         <div class=" card col-6 show-card">
         
          <img src="<%=listing.image%>" class="show-img card-img-top " alt="listing-img">
          <p style="padding: 0.5rem;">
          
           <%=listing.description%><br>
           &#8377 <%=listing.price.toLocaleString("en-IN")%><br>
           <%=listing.location%><br>
           <%=listing.country%>
          </p>
         </div>
          
        </div>
        <div class="row">
          <div class="col-1 btns offset-4">
            <a href="/listings/<%=listing._id%>/edit" class="btn edit-btn ">Edit </a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn btn-dark delete">Delete</button>
            </form>
          </div>
        </div>
       

        <div class="row">
          <form method="post" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
          
          <div class="review col-7 offset-3">
            <label for="rating" class="form-label">Range</label>
            <input min='1' max="5" type="range" name="review[rating]" id="rating" class="form-range">
            <div class="comment">
              <div class="invalid-feedback">
                Please type your comment.
              </div>
              <label for="comment" class="form-label" >Comment</label>
              <textarea type="text" rows="8" cols="25" id="comment" name="review[comment]" class="form-control mb-2" required></textarea>
            </div>
           
            <button class="mb-5 btn btn-outline-dark">Submit</button>
          </div>
         </form>
        </div>
        <h3>All Reviews</h3>
         
            <% for(review of listing.reviews){%>
              <div class="card" style="width: 18rem;">
               
                <div class="card-body">
                  <h5 class="card-title">Shradha</h5>
                  <p class="card-text">Rating : <%=review.rating%></p>
                  <p class="card-text">Comment : <%=review.comment%></p>
                </div>
                <form method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=delete" class="mb-3">
                  <button class="btn btn-sm btn-dark">Delete</button>
              </form>
              
              </div>
          <%}%>
          
        
      
      </div>
    
 

</body>
